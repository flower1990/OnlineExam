@model ComputerRankExam.Areas.Member.Models.ChangeEmailViewMode
@{
    ViewBag.Title = "修改邮箱";
    Layout = null;
}

@using (Ajax.BeginForm("ChangeEmail", "AverageUser", new AjaxOptions() { InsertionMode = InsertionMode.Replace, UpdateTargetId = "content" }))
{
    @Html.AntiForgeryToken()
    <div class="panel-header">
        修改邮箱
        <hr />
        @Html.ValidationSummary(true)
        @Html.HiddenFor(model => model.OriginalEmail)
    </div>
    <div class="panel-body">
        <div class="form-horizontal">
            <div class="control-group">
                @Html.LabelFor(model => model.OriginalEmail, new { @class = "control-label" })
                <div class="controls">
                    @Html.TextBoxFor(model => model.OriginalEmail, new { @class = "form-control", disabled = "" })
                </div>
            </div>

            <div class="control-group">
                @Html.LabelFor(model => model.ConfirmEmail, new { @class = "control-label" })
                <div class="controls">
                    @Html.TextBoxFor(model => model.ConfirmEmail, new { @class = "form-control", placeholder = "请输入完整的当前电子邮箱地址" })
                    @Html.ValidationMessageFor(model => model.ConfirmEmail)
                </div>
            </div>

            <div class="control-group">
                <div class="controls">
                    <input type="submit" value="确定" class="btn" />
                </div>
            </div>
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}