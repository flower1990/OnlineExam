@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Member/Views/Shared/_Layout.cshtml";
}
<div class="form-horizontal">
    <h4>修改密码</h4>
    <hr />

    <div class="row">
        <div class="col-md-2">
            <span class="esicon esicon-safety text-danger" style="font-size:32px"></span>
        </div>
        <div class="col-md-6">
            <div class="progress" style="margin-top:10px;">
                <div class="progress-bar" role="progressbar" style="width: 34%;"></div>
            </div>
        </div>
        <div class="col-md-4">
            <span class="text-warning" style="display:block;margin-top:10px;">安全等级：中</span>
        </div>
    </div>
    <hr>

    <div class="row">
        <div class="col-md-2" style="text-align:right;">
            <span class="glyphicon glyphicon-ok"></span>
        </div>
        <span class="col-md-3">登录密码</span>
        <span class="col-md-4">登录在线练习中心时需要输入的密码</span>
        <a href="#" class="col-md-offset-1  btn btn-primary" style="margin-top: -3px;">修改</a>
    </div>
    <hr>

    <div class="row">
        <div class="col-md-2" style="text-align:right;">
            <span class="glyphicon glyphicon-warning-sign"></span>
        </div>
        <span class="col-md-3">支付密码</span>
        <span class="col-md-4">在网校进行消费行为时需要输入的密码</span>
        <a href="#" class="col-md-offset-1 btn btn-primary" style="margin-top: -3px;">设置</a>
    </div>
    <hr>

    <div class="row">
        <div class="col-md-2" style="text-align:right;">
            <span class="glyphicon glyphicon-warning-sign"></span>
        </div>
        <span class="col-md-3">安全问题</span>
        <span class="col-md-4">通过设置并且验证安全问题，保护帐号密码安全。</span>
        <a href="#" class="col-md-offset-1 btn btn-primary" style="margin-top: -3px;">设置</a>
    </div>
</div>



